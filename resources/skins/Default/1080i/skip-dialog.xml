<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">4001</defaultcontrol>
    <coordinates>
        <s>1</s>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>

    <controls>
        <!-- Overlay escuro cobrindo a tela toda -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="88000000">black.png</texture>
        </control>

        <!-- Card principal — bottom-right, menor que o upnext -->
        <control type="group">
            <posx>1260</posx>
            <posy>710</posy>
            <width>600</width>
            <height>310</height>

            <!-- Fundo do card -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>600</width>
                <height>310</height>
                <texture colordiffuse="FF1A1A1A">white.png</texture>
                <bordertexture border="8">roundedbutton-focus.png</bordertexture>
                <bordersize>2</bordersize>
            </control>

            <!-- Thumbnail do episódio -->
            <control type="image" id="4007">
                <posx>20</posx>
                <posy>20</posy>
                <width>270</width>
                <height>152</height>
                <aspectratio>scale</aspectratio>
                <texture>DefaultVideo.png</texture>
            </control>

            <!-- Label "Skip Intro" -->
            <control type="label">
                <posx>308</posx>
                <posy>15</posy>
                <width>272</width>
                <height>35</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$ADDON[plugin.video.thethunder 32200]</label>
            </control>

            <!-- Nome do episódio -->
            <control type="label" id="4006">
                <posx>308</posx>
                <posy>55</posy>
                <width>272</width>
                <height>110</height>
                <font>font13</font>
                <textcolor>FFE0E0E0</textcolor>
                <label>1x01 - Episode Title</label>
                <wrapmultiline>true</wrapmultiline>
            </control>

            <!-- Barra de progresso da contagem regressiva -->
            <control type="progress" id="4004">
                <posx>20</posx>
                <posy>192</posy>
                <width>560</width>
                <height>10</height>
                <texturebg colordiffuse="FF404040">white.png</texturebg>
                <lefttexture>-</lefttexture>
                <midtexture colordiffuse="FF00D9FF">white.png</midtexture>
                <righttexture>-</righttexture>
                <info>0</info>
            </control>

            <!-- Botão Skip -->
            <control type="button" id="4001">
                <posx>20</posx>
                <posy>225</posy>
                <width>270</width>
                <height>50</height>
                <label>$ADDON[plugin.video.thethunder 32202]</label>
                <font>font13</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FFFFFFFF</focusedcolor>
                <texturefocus>white10.png</texturefocus>
                <texturenofocus></texturenofocus>
                <onleft>4002</onleft>
                <onright>4002</onright>
                <onup>4002</onup>
                <ondown>4002</ondown>
            </control>

            <!-- Botão Cancelar -->
            <control type="button" id="4002">
                <posx>310</posx>
                <posy>225</posy>
                <width>270</width>
                <height>50</height>
                <label>$ADDON[plugin.video.thethunder 32109]</label>
                <font>font13</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FFFFFFFF</focusedcolor>
                <texturefocus>white10.png</texturefocus>
                <texturenofocus></texturenofocus>
                <onleft>4001</onleft>
                <onright>4001</onright>
                <onup>4001</onup>
                <ondown>4001</ondown>
            </control>

        </control>
    </controls>
</window>
