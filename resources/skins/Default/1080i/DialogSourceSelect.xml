<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol>200</defaultcontrol>
    <coordinates>
        <s>1</s>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>

        <!-- Fanart de fundo -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>$INFO[Window(10000).Property(loading.fanart)]</texture>
            <aspectratio>scale</aspectratio>
            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="250" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Overlay escuro neutro sobre fanart -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>white.png</texture>
            <colordiffuse>BB000000</colordiffuse>
            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="250" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Título -->
        <control type="label">
            <posx>0</posx>
            <posy>230</posy>
            <width>1920</width>
            <height>35</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font15_title</font>
            <textcolor>FFFFFFFF</textcolor>
            <label>$ADDON[plugin.video.thethunder 30300]</label>
            <animation effect="fade" start="0" end="100" time="350" delay="100" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0" end="0" time="350" delay="100" tween="back" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Sombra abaixo do dialog -->
        <control type="image">
            <posx>610</posx>
            <posy>725</posy>
            <width>700</width>
            <height>50</height>
            <texture>dialog_shadow.png</texture>
            <animation effect="fade" start="0" end="100" time="350" delay="120" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Fundo vidro cinza — 640×420, centrado -->
        <control type="image">
            <posx>640</posx>
            <posy>290</posy>
            <width>640</width>
            <height>420</height>
            <texture>dialog_bg.png</texture>
            <animation effect="fade" start="0" end="100" time="350" delay="150" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,40" end="0,0" time="350" delay="150" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
            <animation effect="slide" start="0,0" end="0,20" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Borda branca reflexo de vidro -->
        <control type="image">
            <posx>640</posx>
            <posy>290</posy>
            <width>640</width>
            <height>420</height>
            <texture>dialog_border.png</texture>
            <animation effect="fade" start="0" end="100" time="350" delay="150" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,40" end="0,0" time="350" delay="150" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Lista de players — 4 visíveis, demais rolam -->
        <control type="list" id="200">
            <posx>660</posx>
            <posy>310</posy>
            <width>600</width>
            <height>400</height>
            <onup>200</onup>
            <ondown>200</ondown>
            <scrolltime>200</scrolltime>
            <orientation>vertical</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <animation effect="fade" start="0" end="100" time="350" delay="200" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,40" end="0,0" time="350" delay="200" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
            <animation effect="slide" start="0,0" end="0,20" time="200" tween="sine" easing="in">WindowClose</animation>

            <!-- Item sem foco -->
            <itemlayout height="80" width="600">
                <control type="image">
                    <posx>0</posx><posy>0</posy>
                    <width>600</width><height>74</height>
                    <texture>item_normal.png</texture>
                </control>
                <control type="label">
                    <posx>22</posx><posy>0</posy>
                    <width>558</width><height>74</height>
                    <font>font13</font>
                    <textcolor>FFE8E8E8</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>

            <!-- Item com foco — vidro branco iluminado -->
            <focusedlayout height="80" width="600">
                <control type="image">
                    <posx>0</posx><posy>0</posy>
                    <width>600</width><height>74</height>
                    <texture>item_focused.png</texture>
                </control>
                <control type="label">
                    <posx>22</posx><posy>0</posy>
                    <width>558</width><height>74</height>
                    <font>font13</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>

        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="201">
            <posx>1268</posx>
            <posy>310</posy>
            <width>4</width>
            <height>400</height>
            <orientation>vertical</orientation>
            <texturesliderbar>scrollbar_track.png</texturesliderbar>
            <textureslider>scrollbar_thumb.png</textureslider>
            <textureslibarnofocus>scrollbar_track.png</textureslibarnofocus>
            <scroll>200</scroll>
            <animation effect="fade" start="0" end="100" time="350" delay="230" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

        <!-- Hint inferior -->
        <control type="label">
            <posx>0</posx>
            <posy>740</posy>
            <width>1920</width>
            <height>25</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font15</font>
            <textcolor>90FFFFFF</textcolor>
            <label>$ADDON[plugin.video.thethunder 30301]</label>
            <animation effect="fade" start="0" end="100" time="350" delay="250" tween="sine" easing="out">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200" tween="sine" easing="in">WindowClose</animation>
        </control>

    </controls>
</window>